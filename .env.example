# Required: Telegram Bot API token from @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# Required: Base URL for the Reviews API
API_BASE_URL=http://localhost:8000

# Optional: Request timeout in seconds (default: 30)
REQUEST_TIMEOUT=30

# Optional: Admin chat ID for error notifications
# ADMIN_CHAT_ID=123456789

# Optional: Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: Database URL for the API (SQLite by default)
# DATABASE_URL=sqlite:///./app.db
